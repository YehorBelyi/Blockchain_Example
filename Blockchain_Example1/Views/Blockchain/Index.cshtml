@using Blockchain_Example1.Models.Contracts
@model IEnumerable<Blockchain_Example1.Models.Block>

@{
    ViewData["Title"] = "View";
    var nodeId = ViewBag.CurrentNodeId as string ?? "A";
    var nodes = ViewBag.Nodes as List<string> ?? new List<string>();

    var stakingAddress = ViewBag.StakingAddress as string;
}

<div>
    <form method="get" asp-action="Index" style="display:inline-block">
        <label>Поточний вузол</label>
        <select name="nodeId">
            @foreach(var n in nodes)
            {
                if (n == nodeId)
                {
                    <option selected="selected" value="@n">Node @n</option>
                }
                else
                {
                    <option value="@n">Node @n</option>
                }
            }
        </select>
        <input type="submit" value="Switch"/>
    </form>
</div>


@* Importing modals *@
@await Html.PartialAsync("Components/_PrivateKeyModal")
@await Html.PartialAsync("Components/_PublicKeyModal")
@await Html.PartialAsync("Components/_RegisterWalletModal")
@await Html.PartialAsync("Components/_MempoolModal")


@await Html.PartialAsync("Components/_ControlButtons")

@if (!string.IsNullOrEmpty(stakingAddress))
{
    <div class="row mb-5">

        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-success text-white">
                    <h5>Stake</h5>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Stake">
                        <input type="hidden" value="@nodeId" name="nodeId" />

                        <div class="mb-3">
                            <label class="form-label">From Address</label>
                            <input type="text" name="fromAddress" class="form-control" placeholder="ADDR_....." required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Amount</label>
                            <input type="number" name="amount" class="form-control" placeholder="10.0" min="0.01" step="0.01" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Private key</label>
                            <input type="text" name="privateKey" class="form-control" placeholder="Private Key XML" required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Fee</label>
                            <input type="text" name="fee" class="form-control" placeholder="0.5" required />
                        </div>

                        <button type="submit" class="btn btn-success w-100">
                            Stake
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-warning text-dark">
                    <h5>Withdraw from stake</h5>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="WithdrawFromStake">
                        <input type="hidden" value="@nodeId" name="nodeId" />

                        <div class="mb-3">
                            <label class="form-label">Your Address</label>
                            <input type="text" name="userAddress" class="form-control" placeholder="ADDR_....." required />
                        </div>

                        <div class="mb-3">
                            <label class="form-label">Amount</label>
                            <input type="number" name="amount" class="form-control" placeholder="Amount" min="0.01" step="0.01" required />
                        </div>

                        <button type="submit" class="btn btn-warning w-100">
                            Withdraw
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}

<hr />

@await Html.PartialAsync("Components/_WalletList")
@await Html.PartialAsync("Components/_Mempool")

@await Html.PartialAsync("Components/_InfoSection")
@await Html.PartialAsync("Components/_FormSection")
@await Html.PartialAsync("Components/_BlockList", Model)

@section Scripts {
    <script src="~/lib/jquery.unobtrusive-ajax/jquery.unobtrusive-ajax.min.js"></script>
    <script src="~/lib/jquery/jquery.min.js"></script>
    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const addForm = document.getElementById("addBlockForm");
            const spinner = document.getElementById("spinner-container");
            const dataInput = document.querySelector("#data");

            if (addForm && spinner) {
                addForm.addEventListener("submit", () => {
                    spinner.classList.remove("d-none");
                    setTimeout(() => {
                        dataInput.value = "";
                    }, 1500);
                });
            }

            const copyButtons = document.querySelectorAll(".copyKeyButton");

            copyButtons.forEach(btn => {
                btn.addEventListener("click", () => {
                    const modal = btn.closest(".modal");
                    const keyTextElement = modal.querySelector(".modal-key");
                    const keyText = keyTextElement.innerText.trim();

                    navigator.clipboard.writeText(keyText).then(() => {
                        btn.textContent = "Copied!";
                        btn.classList.remove("btn-primary");
                        btn.classList.add("btn-success");

                        setTimeout(() => {
                            btn.textContent = "Copy Key";
                            btn.classList.remove("btn-success");
                            btn.classList.add("btn-primary");
                        }, 1500);
                    }).catch(err => {
                        console.error("Clipboard copy failed:", err);
                        alert("Failed to copy key!");
                    });
                });
        });
            

        });

        var onComplete = function () {
            $("query").val('');
        };

        $('#query').on('keyup', function() {
                var query = $(this).val();
                $.get('@Url.Action("Search", "Blockchain")', { query: query }, function(data) {
                    $('#Tabledata').html(data);
                });
            });


        setInterval(() => {
            $.get('@Url.Action("Search", "Search", new { nodeId = @nodeId })', function(data) {
                $('#Tabledata').html(data);
            });
        }, 5000);
    </script>
}

