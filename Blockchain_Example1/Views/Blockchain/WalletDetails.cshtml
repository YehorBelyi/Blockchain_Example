@model Blockchain_Example1.Models.Wallet

@{
    ViewData["Title"] = "Wallet Details";
    var transactions = ViewBag.WalletTransactions as List<Blockchain_Example1.Models.Transaction> ?? new List<Blockchain_Example1.Models.Transaction>();
}

<div class="container mt-4">
    <div class="card shadow border-0 rounded-4">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">Wallet Details</h4>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-3 fw-bold">Address</dt>
                <dd class="col-sm-9 text-break">@Model.Address</dd>

                <dt class="col-sm-3 fw-bold">Display Name</dt>
                <dd class="col-sm-9">@Model.DisplayName</dd>

                <dt class="col-sm-3 fw-bold">Joined On</dt>
                <dd class="col-sm-9">@Model.JoinedOn.ToString("g")</dd>

                <dt class="col-sm-3 fw-bold">Wallet Balance</dt>
                <dd class="col-sm-9">@ViewBag.ThisWalletBalance coins</dd>
            </dl>
        </div>
        <div class="card-footer text-end">
            <a asp-action="Index" class="btn btn-secondary">
                Back to List
            </a>
        </div>
    </div>
</div>

<hr class="my-3" />

<h1>Transactions for @Model.DisplayName</h1>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>From Address</th>
            <th>To Address</th>
            <th>Amount</th>
            <th>Fee</th>
            <th>Note</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tx in transactions)
        {
            @if (!tx.FromAddress.Equals("COINBASE", StringComparison.OrdinalIgnoreCase))
            {
                var confirmationCount = ViewBag.LastBlockIndex - tx.BlockId;
                <tr class="@(confirmationCount >= 3 ? "table-success" : "table-danger")">
                    <td class="text-break">@tx.FromAddress</td>
                    <td class="text-break">@tx.ToAddress</td>
                    <td>@tx.Amount</td>
                    <td>@tx.Fee</td>
                    <td>@tx.Note</td>
                </tr>
            }
            else
            {
                <tr>
                    <td class="text-break">@tx.FromAddress</td>
                    <td class="text-break">@tx.ToAddress</td>
                    <td>@tx.Amount</td>
                    <td>@tx.Fee</td>
                    <td>@tx.Note</td>
                </tr>
            }
        }
        @if (!transactions.Any())
        {
            <tr>
                <td colspan="7" class="text-center">No transactions found for this wallet.</td>
            </tr>
        }
    </tbody>
</table>